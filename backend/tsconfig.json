{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "includes": ["src/**/**/.*", "src/**/.*"],
  "exclude": ["src/**/**/__test__/*"],
  "types": ["web", "bun-types"]
}
